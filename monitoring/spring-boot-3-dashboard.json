{
  "dashboard": {
    "title": "Spring Boot 3 Microservices Dashboard",
    "tags": ["spring-boot", "prometheus"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "datasource": {
            "type": "prometheus",
            "uid": "${DS_PROMETHEUS}"
          },
          "query": {
            "query": "label_values(up, instance)",
            "refId": "StandardVariableQuery"
          },
          "current": {
            "selected": false,
            "text": "host.docker.internal:8082",
            "value": "host.docker.internal:8082"
          },
          "options": []
        }
      ]
    },
    "panels": [
      {
        "id": 1,
        "title": "Uptime",
        "type": "stat",
        "targets": [
          {
            "expr": "process_uptime_seconds{instance=\"$instance\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "decimals": 0
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Heap Memory Used",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(jvm_memory_used_bytes{instance=\"$instance\",area=\"heap\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "decimals": 2
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 6,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "CPU Usage",
        "type": "stat",
        "targets": [
          {
            "expr": "process_cpu_usage{instance=\"$instance\"} * 100",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 2,
            "min": 0,
            "max": 100
          }
        },
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "HTTP Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_server_requests_seconds_count{instance=\"$instance\"}[5m])",
            "refId": "A",
            "legendFormat": "{{uri}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 5,
        "title": "JVM Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "jvm_memory_used_bytes{instance=\"$instance\",area=\"heap\"}",
            "refId": "A",
            "legendFormat": "{{id}}"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      }
    ]
  }
}

